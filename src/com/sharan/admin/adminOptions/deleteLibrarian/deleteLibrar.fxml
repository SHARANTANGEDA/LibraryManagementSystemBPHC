<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>


<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<BorderPane fx:id="deleteLibrarian" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8.0.121"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sharan.admin.adminOptions.deleteLibrarian.DeleteLibrarian">
    <top>
        <VBox alignment="CENTER" spacing="30">
            <Label style="-fx-text-fill: BLUE; -fx-background-color:YELLOW  " text="Delete Librarian" textAlignment="CENTER" wrapText="true">
                <font>
                    <Font name="Times New Roman bold" size="36" />
                </font>
            </Label>
            <Label fx:id="inputAlert" style="-fx-text-fill: RED">
                <font>
                    <Font name="Courier New Bold Italic" size="20.0" />
                </font>
            </Label>
        </VBox>
    </top>

    <center>
        <VBox spacing="18" alignment="CENTER">
            <Label text="Enter The ID of the Librarian to be deleted" wrapText="true">
                <font>
                    <Font name="Courier New Bold Italic" size="20.0" />
                </font>
            </Label>
            <TextField fx:id="enterID" />
        </VBox>
    </center>

    <bottom>
        <GridPane alignment="CENTER" hgap="10" vgap="10">
            <VBox spacing="18" alignment="CENTER">
                <Button style="-fx-text-fill:WHITE; -fx-background-color:GREEN" text="Confirm Delete" textAlignment="CENTER"
                        wrapText="true" onAction="#handleButtonClickConfirmDelete">
                    <font>
                        <Font name="Comic Sans MS" size="24.0" />
                    </font>
                </Button>
                <Button style="-fx-text-fill:WHITE; -fx-background-color:GREEN" text="Go Back" textAlignment="CENTER"
                        wrapText="true" onAction="#handleButtonClickGoBack">
                    <font>
                        <Font name="Comic Sans MS" size="24.0" />
                    </font>
                </Button>
                <GridPane.margin>
                    <Insets bottom="25.0" />
                </GridPane.margin>

            </VBox>
        </GridPane>
    </bottom>
</BorderPane>