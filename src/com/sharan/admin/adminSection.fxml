<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sharan.admin.AdminSection"
            maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="500.0" prefWidth="700.0" fx:id="adminSection">
    <top>
        <GridPane hgap="10" vgap="10" alignment="TOP_CENTER">
            <Label text="Welcome To LMS admin Login Page" wrapText="true" GridPane.rowIndex="0" textAlignment="CENTER" GridPane.columnIndex="0"
                   style="-fx-text-fill: BLUE; -fx-background-color:YELLOW  ">
                <font>
                    <Font name="Times New Roman bold" size="36" />
                </font>
            </Label>

        </GridPane>
    </top>
    <center>
        <GridPane hgap="10" vgap="10" alignment="CENTER" >
            <VBox spacing="25" GridPane.rowIndex="0" GridPane.columnIndex="0" alignment="CENTER">
                <Button text="Add Librarian"  textAlignment="CENTER" onAction="#handleButtonClickAddLibrarian"
                        style="-fx-text-fill:WHITE; -fx-background-color:GREEN" >
                    <font>
                        <Font name="Comic Sans MS" size="24.0" />
                    </font>
                </Button>
                <Button text="View Librarian" textAlignment="CENTER" onAction="#handleButtonClickViewLibrarian"
                        style="-fx-text-fill:WHITE; -fx-background-color:GREEN" >
                    <font>
                        <Font name="Comic Sans MS" size="24.0" />
                    </font>
                </Button>
                <Button text="Delete Librarian" textAlignment="CENTER" onAction="#handleButtonClickDeleteLibrarian"
                        style="-fx-text-fill:WHITE; -fx-background-color:GREEN" GridPane.columnSpan="2" >
                    <font>
                        <Font name="Comic Sans MS" size="24.0" />
                    </font>
                </Button>
                <Button text="Logout" textAlignment="CENTER" onAction="#handleButtonClickLogout"
                        style="-fx-text-fill:WHITE; -fx-background-color:GREEN" >
                    <font>
                        <Font name="Comic Sans MS" size="24.0" />
                    </font>
                </Button>
            </VBox>

        </GridPane>
    </center>
</BorderPane>